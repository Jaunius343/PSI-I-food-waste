<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSI_Food_waste</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/stylesheet.css")" />
    @RenderSection("Styles", false)
</head>
<body>
    <header class="main-header">
        <div id="main-logo">
            <a asp-page="/Index"><img src="https://see.fontimg.com/api/renderfont4/BWA45/eyJyIjoiZnMiLCJoIjozNCwidyI6MTAwMCwiZnMiOjM0LCJmZ2MiOiIjMDAwMDAwIiwiYmdjIjoiI0ZGRkZGRiIsInQiOjF9/7oCP/rosmatika-regular.png" alt="Modern fonts"></a>
        </div>
            <nav id="navbar">
            <div class="nav-container">
                @*<a class="navbar-logo" asp-area="" asp-page="/Index">Food waste</a>*@
                <!-- <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                         aria-expanded="false" aria-label="Toggle navigation">
                     <span class="navbar-toggler-icon"></span>
                 </button> -->
                <div class="navbar-links">
                    <ul>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Forms/CreatedRestaurants">Add Restaurant </a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                @{
                    if (ViewData["User"] != null)
                    {
                        <h6 class="col-sm-1">@ViewData["User"]</h6>
                        <form>
                            <button class="btn btn-danger" asp-page="/Forms/LogoutScreen">Logout</button>
                        </form>
                    }

                    else
                    {
                        <div class="nav-buttons">
                            <form class="reg-buttons">
                                <button class="login-button" asp-page="/Forms/LoginScreen">Login</button>
                            </form>
                            <form>
                                <button class="register-button" asp-page="/Forms/RegisterScreen">Register</button>
                            </form>
                        </div>
                    }
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - PSI_Food_waste - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @RenderSection("Scripts", required: false)
</body>
</html>
