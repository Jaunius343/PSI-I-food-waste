<h1>register screen</h1>
<form class="form-horizontal" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-3">
            <input type="text" asp-for="Name">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Pass" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-3">
            <input type="password" asp-for="Pass">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-10 col-sm-10 form-group mb-0 align-middle">
            <button type="submit" class="btn btn-primary">Register</button>
            <label style="color:red">@Model.Msg</label>
        </div>
    </div>
</form>

